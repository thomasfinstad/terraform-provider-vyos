                            <properties>
                              <help>Disable instance</help>
                              <valueless/>
                            </properties>
                          </leafNode>
                          <!-- include end -->
                        </children>
                      </tagNode>
                      <tagNode name="mx">
                        <properties>
                          <help>"MX" record</help>
                          <valueHelp>
                            <format>text</format>
                            <description>A DNS name relative to the root record</description>
