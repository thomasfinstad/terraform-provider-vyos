                            <defaultValue>300</defaultValue>
                          </leafNode>
                          <!-- include end -->
                          <!-- include start from generic-disable-node.xml.i -->
                          <leafNode name="disable">
                            <properties>
                              <help>Disable instance</help>
                              <valueless/>
                            </properties>
                          </leafNode>
                          <!-- include end -->
                        </children>
                      </tagNode>
