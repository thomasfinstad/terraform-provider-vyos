                            <regex>([-_a-zA-Z0-9.]{1,63}|@)(?&lt;!\.)</regex>
                          </constraint>
                        </properties>
                        <children>
                          <leafNode name="value">
                            <properties>
                              <help>Record contents</help>
                              <valueHelp>
                                <format>text</format>
                                <description>Record contents</description>
                              </valueHelp>
                              <multi/>
                            </properties>
                          </leafNode>
                          <!-- include start from dns/time-to-live.xml.i -->
                          <leafNode name="ttl">
                            <properties>
                              <help>Time-to-live (TTL)</help>
                              <valueHelp>
                                <format>u32:0-2147483647</format>
