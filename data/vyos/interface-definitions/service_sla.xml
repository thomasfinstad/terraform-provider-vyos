<?xml version="1.0"?>
<interfaceDefinition>
  <node name="service">
    <children>
      <node name="sla" owner="${vyos_conf_scripts_dir}/service_sla.py">
        <properties>
          <help>Service level agreement (SLA)</help>
        </properties>
        <children>
          <node name="owamp-server">
            <properties>
              <help>One-way active measurement protocol (OWAMP) server</help>
            </properties>
            <children>
              <!-- include start from port-number.xml.i -->
              <leafNode name="port">
                <properties>
                  <help>Port number used by connection</help>
                  <valueHelp>
                    <format>u32:1-65535</format>
                    <description>Numeric IP port</description>
                  </valueHelp>
                  <constraint>
                    <validator name="numeric" argument="--range 1-65535"/>
                  </constraint>
                  <constraintErrorMessage>Port number must be in range 1 to 65535</constraintErrorMessage>
                </properties>
                <defaultValue>861</defaultValue>
              </leafNode>
              <!-- include end -->
            </children>
          </node>
          <node name="twamp-server">
            <properties>
              <help>Two-way active measurement protocol (TWAMP) server</help>
            </properties>
            <children>
              <!-- include start from port-number.xml.i -->
              <leafNode name="port">
                <properties>
                  <help>Port number used by connection</help>
                  <valueHelp>
                    <format>u32:1-65535</format>
                    <description>Numeric IP port</description>
                  </valueHelp>
                  <constraint>
                    <validator name="numeric" argument="--range 1-65535"/>
                  </constraint>
                  <constraintErrorMessage>Port number must be in range 1 to 65535</constraintErrorMessage>
                </properties>
                <defaultValue>862</defaultValue>
              </leafNode>
              <!-- include end -->
            </children>
          </node>
        </children>
      </node>
    </children>
  </node>
</interfaceDefinition>
