                      </constraint>
                      <constraintErrorMessage>Port number must be in range 1 to 65535</constraintErrorMessage>
                    </properties>
                  </leafNode>
                  <!-- include end -->
                </children>
              </node>
              <node name="destination">
                <properties>
                  <help>Destination parameters</help>
                </properties>
                <children>
                  <!-- include start from policy/local-route_rule_ipv6_address.xml.i -->
